<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<BorderPane fx:id="mainPane" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hust.soict.dsai.aims.screen.CartScreenController">
    <top>
        <VBox>
            <MenuBar>
                <menus>
                    <Menu text="Options">
                        <items>
                            <MenuItem text="View Store" onAction="#handleViewStoreMenu"/>
                            <MenuItem text="Update Store"/>
                        </items>
                    </Menu>
                </menus>
            </MenuBar>
            <Label text="CART" textFill="#00ffff">
                <font>
                    <Font size="50.0"/>
                </font>
                <VBox.margin>
                    <Insets left="10.0"/>
                </VBox.margin>
            </Label>
        </VBox>
    </top>
    <center>
        <VBox spacing="10.0">
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <VBox.margin>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </VBox.margin>
                <Label text="Filter:"/>
                <TextField fx:id="tfFilter"/>

                <RadioButton fx:id="radioBtnFilterId" text="By ID" selected="true">
                    <toggleGroup>
                        <ToggleGroup fx:id="filterCategory"/>
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="radioBtnFilterTitle" text="By Title" toggleGroup="$filterCategory"/>
            </HBox>

            <TableView fx:id="tblMedia" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colMediaTitle" prefWidth="300.0" text="Title"/>
                    <TableColumn fx:id="colMediacategory" prefWidth="150.0" text="Category"/>
                    <TableColumn fx:id="colMediaCost" prefWidth="100.0" text="Cost"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>

            <ButtonBar>
                <buttons>
                    <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#btnPlayPressed" text="Play"/>
                    <Button fx:id="btnRemove" mnemonicParsing="false" onAction="#btnRemovePressed" text="Remove"/>
                </buttons>
            </ButtonBar>
        </VBox>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" spacing="20.0">
            <BorderPane.margin>
                <Insets top="50.0" right="50.0"/>
            </BorderPane.margin>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Total:">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
                <Label fx:id="totalCostLabel" text="0.00 $" textFill="#00ffff">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Label>
            </HBox>
            <Button mnemonicParsing="false" onAction="#btnPlaceOrderPressed" text="Place Order" textFill="WHITE" style="-fx-background-color: red;">
                <font>
                    <Font size="24.0"/>
                </font>
            </Button>
        </VBox>
    </right>
</BorderPane>